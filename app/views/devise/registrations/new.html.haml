.login
  .title
    .title-content
      .title__name 
        %h1 ToDoUp
      .title__content
        %h2 ゲーム感覚でタスク管理をしてみよう！！
        %h3 今日のあなたにいいことがありますように
  .login-form
    .login-form__top
      %h2 Sign up
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :name,class: "field-label"
          %br/
          = f.text_field :name, autofocus: true
        .field
          = f.label :email,class: "field-label"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :password,class: "field-label"
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password"
        .field
          = f.label :password_confirmation,class: "field-label"
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password"
        .field-level
          = f.label :level
          %br/
          = f.text_field :level, value: 1
        .field-level
          = f.label :ex_point
          %br/
          = f.text_field :ex_point, value: 0
        .actions
          = f.submit "Sign up",class: "field-btn"
      = render "devise/shared/links"
